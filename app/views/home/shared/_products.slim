.features_items
  h2.title_feature_item = t('.products')
  #list_products

  .load_more
    button.btn.btn-load_more = t('.load_more')

script#list_products_template[type='text/template']
  | <% _.each(option.products, function(product) { %>
  |   <div class='col-sm-4 col-xs-6'>
  |     <div class='product-image-wrapper'>
  |       <div class='single-products'>
  |         <div class='productinfo add_product' product_id='<%- product.id %>'>
  |           <a href='/products/<%- product.id %>'>
  |             <img class='img_product' src='<%- option.images[product.id] %>'/>
  |             <% if (product.quantity === 0) { %>
  |               <img class='sold_out' src='/assets/home/stock.png' />
  |             <% } %>
  |           </a>
  |           <div class='price display-flex'>
  |             <h2 class='price_new'>
  |               <sup>$</sup> <%- product.discount %>
  |             </h2>
  |             <del class='price_old'>
  |               <sup>$</sup> <%- product.price %>
  |             </del>
  |           </div>
  |           <div class='rate-star'>
  |             <i class='fa fa-star'></i>
  |             <i class='fa fa-star'></i>
  |             <i class='fa fa-star'></i>
  |             <i class='fa fa-star'></i>
  |             <i class='fa fa-star'></i>
  |           </div>
  |           <p class='name_product'><%- product.title %></p>
  |         </div>
  |         <img src='/assets/home/sale' class='sale' />
  |       </div>
  |       <div class='choose'>
  |         <ul class='nav nav-pills nav-justified'>
  |           <li><a><i class='fa fa-plus-square'></i>See Detail</a></li>
  |           <li><a><i class='fa fa-plus-square'></i>Quick View</a></li>
  |         </ul>
  |       </div>
  |     </div>
  |   </div>
  | <% }) %>
