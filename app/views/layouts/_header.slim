header#header
  / ---------------------- header top ------------------------
  .header_top
    .container
      .row
        .col-sm-6
          .header_info
            ul.nav.nav-pills
              li: a
                i.fa.fa-phone &nbsp
                = t('.dev_phone')
              li: a
                i.fa.fa-envelope &nbsp
                = t('.dev_email')
        .col-sm-6.header_top--right
          .social-icons
            ul.nav.nav-bar
              li: a
                i.fa-brands.fa-facebook-f
              li: a
                i.fa-brands.fa-twitter
              li: a
                i.fa-brands.fa-linkedin
              li: a
                i.fa-brands.fa-google-plus-g
              li: a
                i.fa-brands.fa-instagram
          .btn-group.pull-right.language
            button.btn.btn-default.dropdown-toggle.usa type='button' data-toggle='dropdown'
              = link_to "#{locale(params[:locale], 'ðŸ‡¬ðŸ‡§ English', 'ðŸ‡»ðŸ‡³ Vietnamese')}", locale:"#{locale(params[:locale], 'en', 'vi')}"
              span.caret
            ul.dropdown-menu
              li
                = link_to "#{locale(params[:locale], 'ðŸ‡»ðŸ‡³ Vietnamese', 'ðŸ‡¬ðŸ‡§ English')}", locale:"#{locale(params[:locale], 'vi', 'en')}"
  / --------------------- header middle ----------------------
  .header_middle
    .container
      .row
        .col-sm-4.display-flex
          .logo
            a href="#{root_path}"
                = image_tag('home/logo')
        .col-sm-8
          .shop-menu
            ul.nav.navbar-nav
              li: a.cart.sendCart href="#{carts_url}"
                span.badge.count-product
                i.fa.fa-shopping-cart &nbsp
                = t('.cart')
              - if user_signed_in?
                li: a
                  i.fa.fa-bell &nbsp
                  = t('.notification')
                li: a id='c_checkout'
                  i.fa.fa-credit-card &nbsp
                  = t('.checkout')
                li: a href="#{profile_edit_user_url}"
                  i.fa.fa-user
                  |  #{current_user.name}
                - if current_user.has_role?(:admin)
                  li: a href="#{admin_users_url}"
                    i.fa.fa-user &nbsp
                    = t('.admin_title')
              li
                - if user_signed_in?
                  = link_to logout_path
                    i.fa.fa-lock &nbsp
                    = t('.logout')
                - else
                  = link_to login_path
                    i.fa.fa-lock &nbsp
                    = t('.login')
  / --------------------- header bottom ----------------------
  .header_bottom
    .container
      .row
        .col-sm-9
          .navbar-header
            button.navbar-toggle.collapsed type='button' data-toggle='collapse' data-target='.navbar-collapse'
              span.sr-only = t('.toggle_nav')
              span.icon-bar
              span.icon-bar
              span.icon-bar
          .mainmenu
              ul.nav.navbar-nav.collapse.navbar-collapse
                li
                  a.active href="#{root_path}"
                    = t('.home')
                li.dropdown
                    a
                      = t('.shop')
                      i.fa.fa-angle-down
                      ul.sub-menu role='menu'
                        - if user_signed_in?
                          li: a href="#{carts_path}"
                            = t('.cart')
                          li: a href="#{user_order_url}"
                            = t('.my_orders')
                          li: a href="#{user_addresses_url}"
                            = t('.address')
                        li: a
                          = t('.contact')
                li.dropdown
                  a
                    = t('.blog')
                    i.fa.fa-angle-down
                    ul.sub-menu role='menu'
                      li: a = t('.blog_list')
                      li: a = t('.contact')
                li: a = t('.contact')
        .col-sm-3
          .search
            .search_box
              input.input_search type='text' placeholder='Enter Name Product'
