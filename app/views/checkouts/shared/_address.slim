script#address_default_template[type='text/template']
  | <div class='title_order'>
  |   <div class='pull-left'>
  |     <strong>Delivery address</strong>
  |   </div>
  |   <div class='pull-right' id='change_address'>
  |     <i class='fa-solid fa-sliders'></i>
  |   </div>
  | </div>
  | <div class='address_content-name' style='display: block'>
  |   <p><%- option.fullname %>&nbsp - &nbsp<%- option.phone_number %></p>
